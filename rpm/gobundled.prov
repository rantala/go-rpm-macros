while read dir ; do
  if [[ -d "${dir}" ]] ; then
    if [[ "${dir%/vendor/*}/vendor" != "${dir}" && \
          -n $(find "${dir}" -maxdepth 1 -type f) ]] ; then
      echo "bundled(golang(${dir##*/vendor/}))"
    fi
 fi
done | sort -u
